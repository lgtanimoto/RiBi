<%- include('partials/header') %>
<h1>RiskIt or BiscIt Game Complete</h1>

    <div class="container">
        <div class="row"><p> </p></div>
        <div class="row">
            <div class="col-md-3 col-sm-6 game-label">Player Name: </div>
            <div class="col-md-3 col-sm-6 game-field"><%= r_player.playername %></div>
            <div class="col-md-3 col-sm-6 game-label">Amount Won: </div>
            <div class="col-md-3 col-sm-6 game-field">$ <%= amount_won %></div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-6 game-label">Case Chosen: </div>
            <div class="col-md-3 col-sm-6 game-field">Case <%= case_chosen %></div>
            <div class="col-md-3 col-sm-6 game-label">Amount In Case: </div>
            <div class="col-md-3 col-sm-6 game-field">$<%= case_amount %> </div>
        </div>
        <div class="row"><p></p></div>
        <div class="row"><p class="text-danger"><%= win_message %></p></div>
        <div class="row"><p></p></div>
        <form>
            <div class="form-group">
                 <label for="fin_lit">How would you rate your performance on this game not including the initial case selection? (1 - Poor; 5 - Excellent)</label>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                    <label class="form-check-label" for="inlineRadio1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                    <label class="form-check-label" for="inlineRadio2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                    <label class="form-check-label" for="inlineRadio3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option4">
                    <label class="form-check-label" for="inlineRadio4">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="option5">
                    <label class="form-check-label" for="inlineRadio5">5</label>
                </div>
            </div>
            <div class="row"><p></p></div>
            <div class="row">
                <button id="playerdata" type="submit" formaction="/gamedata/player" formmethod="post" class="btn btn-primary col-4">Player Data</button>
                <button id="highscores" type="submit" formaction="/gamedata/high" formmethod="post" class="btn btn-primary col-4">High Scores</button>
                <button id="playagain" type="submit" formaction="/gamestart" formmethod="post" class="btn btn-success col-4">RiskIt or BiscIt again?</button>
            </div>
        </form>
   </div>


<%- include('partials/footer') %>